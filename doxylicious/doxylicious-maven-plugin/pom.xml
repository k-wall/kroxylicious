    <build>
    <plugins>
    <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
        <executions>
            <execution>
                <id>generate-descriptor</id>
                <phase>compile</phase>
                <goals>
                    <goal>descriptor</goal>
                </goals>
            </execution>
        </executions>
        <configuration>
            <goalPrefix>generate</goalPrefix>
            <mojoDependencies>
                <dependency>${project.groupId}:${project.artifactId}</dependency>
            </mojoDependencies>
        </configuration>
    </plugin>

    </plugins>
    </build>
